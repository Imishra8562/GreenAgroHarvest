@model Web.Areas.Panel.Model.SecurityModel
@{
    ViewBag.Title = "Login";
    Layout = null;
    var Type = TempData["AlertType"] ?? string.Empty;
    var Title = TempData["AlertType"] ?? string.Empty;
    var Message = TempData["AlertMessage"] ?? string.Empty;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Form</title>
    <link href="~/Content/iziToast/iziToast.min.css" rel="stylesheet" />
    <script src="~/Content/iziToast/iziToast.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        .social-accounts {
            text-align: center;
        }

        label.form-label {
            padding: 5px;
        }

        .formbg {
            background: #F8F9FD;
            background: linear-gradient(0deg, rgb(255, 255, 255) 0%, rgb(244, 247, 251) 100%);
            border-radius: 40px;
            padding: 25px 35px;
            border: 5px solid rgb(255, 255, 255);
            box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
        }

        .img-fluid {
            border-radius: 40px;
        }

        div.mb-3 {
            padding: 0px 80px;
        }

        .center-layout {
            margin: 70px auto;
            max-width: 60%;
        }

        @@media (max-width: 768px) {
            .center-layout {
                max-width: 100%;
                margin: 10px auto;
            }

            .formbg {
                padding: 15px;
            }

            div.mb-3 {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">

        <div class=" center-layout">
            <div class="mb-auto">
                @using (Html.BeginForm("AuthenticateUser", "Security", FormMethod.Post, new { @Class = "row g-3 was-validated", @enctype = "multipart/form-data" }))
                 {   <div class="row g-0 formbg justify-content-center">
                    
                         <div class="col-md-5 d-none d-md-block">
                             <img src="~/Areas/Panel/Content/6184159_3094352.jpg"  class="img-fluid" />
                         </div>
                           <div class="col-md-7">
                               <div class="card-header text-center">
                                   Admin Login
                               </div>
                               <div class="text-start">
                                   <div class="mb-3">
                                       <label for="exampleFormControlInput1" class="form-label ">Mobile No</label>
                                       @Html.TextBox("Mobile_No", "", new { @class = "form-control", @type = "text", @placeholder = "Email Address", @required = "required" })
                                   </div>
                                   <div class="mb-3">
                                       <label for="exampleFormControlTextarea1" class="form-label">Password</label>
                                       @Html.TextBox("Password", "", new { @class = "form-control", @type = "Password", @placeholder = "Enter your Password", @required = "required" })
                                   </div>
                                   <div class="mb-1 text-center">
                                       <a href="#">Forgot Password?</a>
                                   </div>
                                   <div class="mb-1 text-center">
                                       <button hrefclass="btn btn-primary mb-3 " type="submit">Sign In</button>
                                   </div>
                                   <div class="social-account-container">
                                       <div class="social-account-container text-center">
                                           <a href="@Url.Action("Index", "Home", new { area = "" })">Back to Website</a>
                                           <div class="title">Or Sign in with</div>
                                       </div>
                                       <div class="social-accounts m-2">
                                           <button class="social-button google">
                                               <svg class="svg" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 488 512">
                                                   <path d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"></path>
                                               </svg>
                                           </button>
                                           <button class="social-button apple">
                                               <svg class="svg" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 384 512">
                                                   <path d="M318.7 268.7c-.2-36.7 16.4-64.4 50-84.8-18.8-26.9-47.2-41.7-84.7-44.6-35.5-2.8-74.3 20.7-88.5 20.7-15 0-49.4-19.7-76.4-19.7C63.3 141.2 4 184.8 4 273.5q0 39.3 14.4 81.2c12.8 36.7 59 126.7 107.2 125.2 25.2-.6 43-17.9 75.8-17.9 31.8 0 48.3 17.9 76.4 17.9 48.6-.7 90.4-82.5 102.6-119.3-65.2-30.7-61.7-90-61.7-91.9zm-56.6-164.2c27.3-32.4 24.8-61.9 24-72.5-24.1 1.4-52 16.4-67.9 34.9-17.5 19.8-27.8 44.3-25.6 71.9 26.1 2 49.9-11.4 69.5-34.3z"></path>
                                               </svg>
                                           </button>
                                           <button class="social-button twitter">
                                               <svg class="svg" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                   <path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"></path>
                                               </svg>
                                           </button>
                                       </div>
                                   </div>
                               </div>
                               <div class="text-center">
                                   <a href="#">Learn user license agreement</a>
                               </div>
                           </div>
                     </div>
                 }
            </div>
        </div>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
<script>
    window.onload = function (e) {
        $("#title").html('Login')
    }
    //Alert
    $(document).ready(function () {
        var Message = '@Message';
        if (Message != '') {
            if ('@Type' == 'SUCCESS') {
                iziToast.success({
                    title: '@Title',
                    message: '@Message',
                });
            }
            else if ('@Type' == 'warning') {
                iziToast.warning({
                    title: '@Title',
                    message: '@Message',
                });
            }
            else if ('@Type' == 'ERROR') {
                iziToast.error({
                    title: '@Title',
                    message: '@Message',
                });
            }
        }
    });
    
</script>