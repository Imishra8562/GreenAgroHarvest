@model Web.Areas.Panel.Controllers.SecurityController
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-body">
    @using (Html.BeginForm("UpdateServices", "Master", FormMethod.Post, new { @Class = "was-validated", @enctype = "multipart/form-data" }))
    {
        <div class="form-body">
            <h4 class="form-section">Services</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-md-3 label-control" for="">Services heading</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Services_Obj.Services_Heading, new { @class = "form-control border-primary", @type = "text", @placeholder = "Services Heading" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-md-3 label-control" for="ServicesId">Services Description</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Services_Obj.Services_Description, new { @class = "form-control border-primary", @type = "text", @placeholder = "Services Description", @autocomplete = "off", @required = "required" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row ">
                        <label class="col-md-3 label-control">Upload Image</label>
                        @Html.TextBoxFor(m => m.Services_Image, new { @class = "form-control border-primary", @type = "file", @placeholder = "Upload Image", @autocomplete = "off" })
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row ">
                        @Html.HiddenFor(m => m.Services_Obj.Services_Id)
                        @Html.HiddenFor(m => m.Services_Obj.Services_Code)
                        <button type="submit" class="btn btn-primary "> <i class="fa fa-check-square-o"></i> Save</button>
                    </div>
                </div>
            </div>
            <h4 class="form-section"></h4>
        </div>
    }

</div>
