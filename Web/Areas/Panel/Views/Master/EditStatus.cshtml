@model Web.Areas.Panel.Model.MasterModel

@{
    ViewBag.Title = "EditStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-body {
        padding: 15px;
    }

    /* Button should take full width on smaller screens */
    .btn {
        width: 100%;
    }

    /* Ensure the buttons aren't too wide on large screens */
    .w-md-auto {
        width: auto;
    }

    /* Adjust margin for small screens */
    .mb-2 {
        margin-bottom: 1rem;
    }
</style>
<div class="card-body">
    @using (Html.BeginForm("UpdateStatus", "Master", FormMethod.Post, new { @Class = "was-validated", @enctype = "multipart/form-data" }))
    {
        <div class="form-body">
            <h4 class="form-section">Status</h4>
            <div class="row ">
                <div class="col-md-6">
                    <label class="label-control" for="ProductId">Status Name</label>
                    @Html.TextBoxFor(m => m.Status_Obj.Status_Name, new { @class = "form-control border-primary", @type = "text", @placeholder = "Status Name", @autocomplete = "off", @required = "required" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row ">
                        @Html.HiddenFor(m => m.Status_Obj.Status_Id)
                        @*@Html.HiddenFor(m => m.Banner_Obj.Banner_image)*@
                        @Html.HiddenFor(m => m.Status_Obj.Status_Code)
                        <button type="submit" class="btn btn-primary m-1"> <i class="fa fa-check-square-o"></i> Update</button>
                    </div>
                </div>
            </div>
            <h4 class="form-section"></h4>
        </div>
    }

</div>