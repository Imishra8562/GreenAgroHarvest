                                                }
                                                @*<td><a href="@Url.Action("DeleteBanner","Master", new { Banner_Id= items.Banner_Id })" class="btn btn-green text-dark">Delete</a></td>*@

                                            </li>
                                        </ul>
                                    </td>
                                </tr>
