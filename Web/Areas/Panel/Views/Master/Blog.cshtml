    <div class="card-body card-dashboard">
        <div id="DataTables_Table_2_wrapper" class="dataTables_wrapper dt-bootstrap4 p-2">
            <!-- Top Controls: Buttons & Search -->
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12 mb-2">
                    <div class="dt-buttons btn-group d-flex flex-wrap">
                        <button class="btn btn-secondary buttons-copy mb-1">Copy</button>
                        <button class="btn btn-secondary buttons-excel mb-1">Excel</button>
                        <button class="btn btn-secondary buttons-pdf mb-1">PDF</button>
                        <button class="btn btn-secondary buttons-collection dropdown-toggle mb-1">Column visibility</button>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 offset-lg-3 mb-2 text-md-right text-center">
                    <div id="DataTables_Table_2_filter" class="dataTables_filter">
                        <label class="d-flex align-items-center justify-content-md-end justify-content-center">
                            <span class="mr-2">Search:</span>
                            <input type="search" class="form-control form-control-sm" placeholder="Type here...">
                        </label>
                    </div>
                </div>
            </div>

            <!-- Responsive Table -->
            <div class="table-responsive mt-3">
                <table class="table table-striped table-bordered dataTable" id="DataTables_Table_2">
                    <thead class="thead-dark">
                        <tr>
                            <th>Blog Id</th>
                            <th>Blog Code</th>
                            <th>Blog Name</th>
                            <th>Blog Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.List_Blog_Obj != null && Model.List_Blog_Obj.Count > 0)
                        {
                            foreach (var items in Model.List_Blog_Obj)
                            {
                                <tr>
                                    <td>@(++i)</td>
                                    <td>@items.Blog_Code</td>
                                    <td class="text-truncate" style="max-width: 200px;">@items.Blog_Name</td>
                                    <td>
                                        @if (items.Blog_Image != null)
                                        {
                                            <img src="@Url.Content(items.Blog_Image)" alt="Blog Image" class="img-thumbnail" style="width: 80px; height: 60px;">
                                        }
                                        else
                                        {
                                            <img src="~/Content/images/recent-post/blog-01.jpg" alt="No Image" class="img-thumbnail" style="width: 80px; height: 60px;">
                                        }
                                    </td>
                                    @*<td>
                                            <a href="@Url.Action("EditBlog", "Master", new { Blog_Id = items.Blog_Id })" class="btn btn-warning btn-sm">Edit</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("DeleteBlog", "Master", new { Blog_Id = items.Blog_Id })" class="btn btn-danger btn-sm">Delete</a>
                                        </td>*@
                                    <td>
                                        <ul class="action">

                                            <li class="edit">
                                                @using (Html.BeginForm("EditBlog", "Master", FormMethod.Post, new { @id = "Edit_Form_" + i.ToString() }))
