@model Web.Areas.Panel.Model.MasterModel
@{
    ViewBag.Title = "About";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<style>
    .form-body {
        padding: 15px;
    }

    /* Button should take full width on smaller screens */
    .btn {
        width: 100%;
    }

    /* Ensure the buttons aren't too wide on large screens */
    .w-md-auto {
        width: auto;
    }

    /* Adjust margin for small screens */
    .mb-2 {
        margin-bottom: 1rem;
    }
</style>

    <div class="card-body">
        @using (Html.BeginForm("UpdateAbout", "Master", FormMethod.Post, new { @Class = "was-validated", @enctype = "multipart/form-data" }))
        {
            <div class="form-body">
                <h4 class="form-section">About</h4>
                <div class="row g-4">
                    <div class="col-md-6 mb-2">
                        <label for="inputEmail" class="form-label">Name </label>
                        @Html.TextBoxFor(m => m.About_Obj.Name, new { @class = "form-control border-primary", @type = "text", @placeholder = "Name", @autocomplete = "off", @required = "required" })
                    </div>

                    <div class="col-md-6 mb-2">
                        <label for="Registration_No" class="form-label">About Us</label>
                        @Html.TextBoxFor(m => m.About_Obj.About_Us, new { @class = "form-control border-primary", @type = "text", @placeholder = "About Us" })
                    </div>

                    <div class="col-md-6">
                        <label class="label-control ">Upload Image</label>
                        @Html.TextBoxFor(m => m.Image, new { @class = "form-control border-primary ", @type = "file", @placeholder = "About Code", @autocomplete = "off" })
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row ">
                            @Html.HiddenFor(m => m.About_Obj.About_Id)
                            @Html.HiddenFor(m => m.About_Obj.Image)
                            @Html.HiddenFor(m => m.About_Obj.About_Code)
                            <button type="submit" class="btn btn-primary m-1"> <i class="fa fa-check-square-o"></i> Update</button>
                        </div>
                    </div>
                </div>
                <h4 class="form-section"></h4>
            </div>
        }

    </div>

