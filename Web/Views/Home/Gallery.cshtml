
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Title Bar -->
<div class="pbmit-title-bar-wrapper">
    <div class="container">
        <div class="pbmit-title-bar-content">
            <div class="pbmit-title-bar-content-inner">
                <div class="pbmit-tbar">
                    <div class="pbmit-tbar-inner container">
                        <h1 class="pbmit-tbar-title"> Our Gallery</h1>
                    </div>
                </div>
                <div class="pbmit-breadcrumb">
                    <div class="pbmit-breadcrumb-inner">
                        <span>
                            <a title="" href="javascript:void()" class="home"><span>Green Agro</span></a>
                        </span>
                        <span class="sep">
                            <i class="pbmit-base-icon-angle-right"></i>
                        </span>
                        <span><span class="post-root post post-post current-item">Gallery</span></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Title Bar End-->
<!-- Page Content -->
<div class="page-content">

    <!-- Portfolio Sortable Col 3 Start -->
    <section class="section-xl pbmit-sortable-yes">
        <div class="container">
            <div class="text-center mb-3">
                <h4>
                    Our Farm's Story in Pictures
                </h4>
            </div>
            <div class="pbmit-element-posts-wrapper row multi-columns-row">
                @if (Model.List_Gallery_Obj != null && Model.List_Gallery_Obj.Count > 0)
                {
                    foreach (var items in Model.List_Gallery_Obj)
                    {

                        <article class="pbmit-portfolio-style-1 production col-md-4">
                            <div class="pbminfotech-post-content">
                                <div class="pbmit-featured-img-wrapper">
                                    <div class="pbmit-featured-wrapper">
                                        @if (!string.IsNullOrEmpty(items.Gallery_Image))
                                        {
                                            <img src="@items.Gallery_Image.Replace("~","..")" class="img-fluid" alt="">
                                        }
                                        else
                                        {
                                            <img src="~/Content/images/portfolio/portfolio-01b.jpg" class="img-fluid" alt="">
                                        }
                                    </div>
                                </div>
                                <div class="pbminfotech-box-content">
                                    <div class="pbminfotech-titlebox">
                                        <div class="pbmit-port-cat">
                                            <a href="javascript:void()" rel="tag">@items.Gallery_Name</a>
                                        </div>
                                        <h3 class="pbmit-portfolio-title">
                                            <a href="javascript:void()">@items.Gallery_Heading</a>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                }
            </div>
        </div>
    </section>
    <!-- Portfolio Sortable Col 3 End -->

</div>
<!-- Page Content End -->
