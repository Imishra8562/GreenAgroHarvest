    <!-- Contact Form -->
    <section class="section-xl">
        <div class="container">
            <div class="row g-0">
                <div class="col-md-12 col-xl-5">
                    <div class="contact-img-box"></div>
                </div>
                <div class="col-md-12 col-xl-7">
                    <div class="contact-form-area pbmit-bg-color-white">
                        <div class="pbmit-heading-subheading animation-style4">
                            @*<h4 class="pbmit-subtitle">Get to Contact us</h4>*@
                            <h4 class="">Have a any Questions? <br> Get in Touch!</h4>
                        </div>
                        @using (Html.BeginForm("SendToEmail", "Home", FormMethod.Post, new { @Class = " was-validated contact-form", @enctype = "multipart/form-data" }))
                        {
                       
                              <div class="row">
                                  <div class="col-md-6">
                                      <label class="label-control" for="ProductId">Name</label>
                                      @Html.TextBoxFor(m => m.Contact_Obj.Contact_Name, new { @class = "form-control border-primary", @type = "text", @placeholder = "Name", @name= "Contact_Name", @autocomplete = "off", @required = "required" })

                                  </div>
                                  <div class="col-md-6">
                                      <label class="label-control" for="ProductId">Phone Number</label>
                                      @Html.TextBoxFor(m => m.Contact_Obj.Contact_Number, new { @class = "form-control border-primary", @type = "text", @placeholder = "Number", @name = "Contact_Number", @autocomplete = "off", @required = "required", @maxlength = "10", @pattern = @"\d{10}", @title = "Please enter a 10-digit number" })

                                  </div>
                                  <div class="col-md-6">
                                      <label class="label-control" for="ProductId">Email</label>
                                      @Html.TextBoxFor(m => m.Contact_Obj.Contact_Email, new { @class = "form-control border-primary", @type = "email", @placeholder = "Email", @name = "Contact_Email", @autocomplete = "off", @required = "required" })

                                  </div>
                                  <div class="col-md-6">
                                      <label class="label-control" for="ProductId">Subject</label>
                                      @Html.TextBoxFor(m => m.Contact_Obj.Contact_Subject, new { @class = "form-control border-primary", @type = "text", @placeholder = "Subject", @name = "Contact_Subject", @autocomplete = "off", @required = "required" })
                                  </div>
                                  <div class="col-md-12">
                                      <label class="label-control" for="ProductId">Comment</label>                                      
                                      @Html.TextBoxFor(m => m.Contact_Obj.Contact_Comment, new { @class = "form-control border-primary", @type = "text", @placeholder = "Comment", @name = "Contact_Comment", @autocomplete = "off", @required = "required" })
                                  </div>
                                  <div class="col-md-12">
                                      <button class="pbmit-btn pbmit-btn-hover-global" type="submit">
                                          <i class="form-btn-loader fa fa-circle-o-notch fa-spin fa-fw margin-bottom d-none"></i>
                                          <span class="pbmit-button-text">Send Massage</span>
                                          <span class="pbmit-button-icon-wrapper">
                                              <span class="pbmit-button-icon">
                                                  <i class="pbmit-base-icon-black-arrow-1"></i>
                                              </span>
                                          </span>
                                      </button>
                                  </div>
                                  <div class="col-md-12 col-lg-12 message-status"></div>
                             </div>
                             
                          }
                    </div>
                </div>
            </div>
        </div>
    </section>
